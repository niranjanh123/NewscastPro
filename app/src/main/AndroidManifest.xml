<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newscastpro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/newspaper"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".about"></activity>
        <activity
            android:name=".Main_headlines_activity"
            android:screenOrientation="portrait"
            android:parentActivityName=".weather_activity" />
        <activity
            android:name=".Sports_detailed_activity"
            android:screenOrientation="portrait"
            android:parentActivityName=".sports" />
        <activity
            android:name=".Business_detailed_activity"
            android:screenOrientation="portrait"
            android:parentActivityName=".business" />
        <activity
            android:name=".sports"
            android:screenOrientation="portrait"
            android:parentActivityName=".weather_activity" />
        <activity android:name=".Register"
            android:screenOrientation="portrait"/>
        <activity android:name=".Login_activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".business"
            android:screenOrientation="portrait"
            android:parentActivityName=".weather_activity" />
        <activity
            android:name=".weather_activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>